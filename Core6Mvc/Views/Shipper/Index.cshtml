@model ICollection<Shipper>


 <a class="btn btn-primary" asp-controller="Shipper" asp-action="Create"> Yeni Kayit </a>  
<table class="table table-hover"> 
    <thead>
        <tr>
            
            <td>ID</td>
            <td>Firma Adi</td>
            <td>Telefon</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ShipperId</td>
                <td>@item.CompanyName</td>
                <td>@item.Phone</td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Shipper" asp-route-id="@item.ShipperId">Sil</a>
                    <a class="btn btn-secondary" asp-action="Update" asp-controller="Shipper" asp-route-id="@item.ShipperId">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>

</table>
